<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/tv_cooking_streak_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking Streak"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:background="@drawable/rounded_box"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_cooking_streak_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>


    <!-- Days Label -->
    <TextView
        android:id="@+id/tv_cooking_streak_days_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days in a Row"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_todays_dishes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Dishes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todays_dishes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
